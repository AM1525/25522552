import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        // إنشاء كائنات من الكود مباشرة
        Manager m1 = new Manager("Ali", 101, 10000, "IT", 5);
        Developer d1 = new Developer("Sara", 102, 8000, "Java", "Senior");

        // عرض الكائنات
        System.out.println("--- Displaying Hardcoded Employees ---");
        System.out.println(m1);
        System.out.println(d1);

        // المقارنة باستخدام equals
        System.out.println("\n--- Comparing Employees ---");
        if (m1.equals(d1)) {
            System.out.println("They are equal.");
        } else {
            System.out.println("They are NOT equal.");
        }

        // قراءة كائن Manager من ملف
        System.out.println("\n--- Reading Manager from File ---");
        try {
            File file = new File("managerfile.txt");
            Scanner input = new Scanner(file);

            String name = input.nextLine();
            int id = Integer.parseInt(input.nextLine());
            double salary = Double.parseDouble(input.nextLine());
            String department = input.nextLine();
            int teamSize = Integer.parseInt(input.nextLine());

            Manager managerFromFile = new Manager(name, id, salary, department, teamSize);
            System.out.println(managerFromFile);

            input.close();
        } catch (FileNotFoundException e) {
            System.out.println("File not found: managerfile.txt");
        }
    }
}
