import java.io.*;
import java.util.ArrayList;

public class Main {

    public static void main(String[] args) {
        ArrayList<Employee> employees = new ArrayList<>();

        // كائنات من الأصناف المختلفة
        Manager m1 = new Manager("Khalid", 1001, "HR", 12000);
        Engineer e1 = new Engineer("Lina", 1002, "Software", 10000);
        Manager m2 = new Manager("Sara", 1003, "Finance", 11000);
        Engineer e2 = new Engineer("Yousef", 1004, "Civil", 9500);

        employees.add(m1);
        employees.add(e1);
        employees.add(m2);
        employees.add(e2);

        // قراءة كائن من ملف
        try {
            BufferedReader reader = new BufferedReader(new FileReader("employee.txt"));
            String name = reader.readLine();
            int id = Integer.parseInt(reader.readLine());
            String dept = reader.readLine();
            double salary = Double.parseDouble(reader.readLine());
            Engineer fileEmp = new Engineer(name, id, dept, salary);
            employees.add(fileEmp);
            reader.close();
        } catch (IOException | NumberFormatException ex) {
            System.out.println("حدث خطأ أثناء قراءة الملف: " + ex.getMessage());
        }

        // مقارنة بين كائنين
        if (m1.equals(m2)) {
            System.out.println("المديران متساويان");
        } else {
            System.out.println("المديران غير متساويين");
        }

        // عرض جميع التفاصيل
        System.out.println("\nتفاصيل الموظفين:");
        for (Employee emp : employees) {
            emp.display();
            System.out.println("----------------------");
        }
    }
}
